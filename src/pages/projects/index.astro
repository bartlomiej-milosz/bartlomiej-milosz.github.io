---
import IndexLayout from '@/layouts/IndexLayout.astro'
import ProjectList from '@/components/widgets/ProjectList.astro'
import { themeConfig } from '@/config'
import { getSortedFilteredProjects } from '@/utils/draft'

const allProjects = await getSortedFilteredProjects()
---

<IndexLayout title={`All Projects - ${themeConfig.site.title}`} description="All portfolio projects">
  <main>
    <h1>Projects</h1>
    <ProjectList projects={allProjects} />
  </main>
</IndexLayout>