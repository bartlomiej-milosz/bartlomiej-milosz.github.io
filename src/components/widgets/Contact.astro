---
import { getEntry } from 'astro:content'
import { render } from 'astro:content'

const contactEntry = await getEntry('contact', 'contact')
// Check if there is actual content (excluding comments)
const hasContent = contactEntry?.body
  ? contactEntry.body.replace(/<!--[\s\S]*?-->/g, '').trim().length > 0
  : false
const { Content } = hasContent && contactEntry ? await render(contactEntry) : { Content: null }
---

{
  hasContent && Content && (
    <div class="contact prose">
      <Content />
    </div>
  )
}

<style>
  .contact:not(:empty) {
    margin-bottom: var(--space-l);
  }
</style>